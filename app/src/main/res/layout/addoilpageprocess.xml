<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/line_addoilprocesspage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    android:orientation="vertical">

<!--    android:layout_gravity="center"-->
<!--    android:gravity="center"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/right_title_line_height"
        android:layout_marginVertical="@dimen/right_title_marginVertical"
        android:layout_marginHorizontal="@dimen/right_title_marginHorizontal"
        android:background="@drawable/drawdash"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:textSize="@dimen/addoil_process_title_size"
            android:text="机器人加油中,请勿移动车辆，请勿进入其工作区域......"
            android:layout_marginHorizontal="@dimen/margin_hor"
            android:layout_marginTop="@dimen/margin_top_size"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
        </TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/margin_top_item"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="油品:"
            android:textColor="@color/black"
            android:textSize="@dimen/addoil_process_title_size"
            android:layout_marginHorizontal="@dimen/margin_hor"
            android:layout_gravity="center"
            android:gravity="center">
        </TextView>

        <TextView
            android:id="@+id/tv_add_oil_process_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="95#"
            android:textColor="@color/red"
            android:textSize="@dimen/title_size"
            android:layout_gravity="center"
            android:gravity="center">
        </TextView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_top_item"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金额(元):"
                android:textColor="@color/black"
                android:textSize="@dimen/addoil_process_title_size"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/tv_add_oil_process_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200元"
                android:textColor="@color/red"
                android:textSize="@dimen/title_size"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/margin_top_item"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="油量(升):"
                android:textColor="@color/black"
                android:textSize="@dimen/addoil_process_title_size"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>

            <TextView
                android:id="@+id/tv_add_oil_process_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.5升"
                android:textColor="@color/red"
                android:textSize="@dimen/title_size"
                android:layout_gravity="center"
                android:gravity="center">
            </TextView>
        </LinearLayout>



        <com.youth.banner.Banner
            android:id="@+id/tv_activity_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/margin_hor_img"
            android:layout_marginVertical="@dimen/margin_top_size">
        </com.youth.banner.Banner>


</LinearLayout>
